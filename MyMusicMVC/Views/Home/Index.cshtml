@model ListMusicViewModel
@{
    ViewData["Title"] = "Home Page";
}

@Html.ActionLink("Add Music", "AddMusic", "Music", null, new { @class = "btn btn-success btn-xs" })

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name of the Music</th>
            <th>Artist</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var music in Model.ListMusic)
        {
        <tr>
            <td class="text-center">@music.Name</td>
            <td class="text-left">@music.Artist.Name </td>
        </tr>
        }
    </tbody>
</table>
